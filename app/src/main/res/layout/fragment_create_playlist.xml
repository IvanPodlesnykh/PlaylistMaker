<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/NewPlaylistBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/BackButtonSize"
            android:layout_height="@dimen/BackButtonSize"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_back_icon"
            android:foreground="?attr/selectableItemBackground"
            android:layout_gravity="center"
            style="@style/NewPlaylistTopPanel" />

        <TextView
            android:id="@+id/fragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="Новый плейлист"
            android:textSize="@dimen/text_size"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            style="@style/SettingsTopPanel" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_image_icon"
        app:layout_constraintTop_toTopOf="@id/playlistCover"
        app:layout_constraintBottom_toBottomOf="@id/playlistCover"
        app:layout_constraintStart_toStartOf="@id/playlistCover"
        app:layout_constraintEnd_toEndOf="@id/playlistCover"/>

    <ImageView
        android:id="@+id/playlistCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="26dp"
        app:layout_constraintHeight_percent="0.40"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/playlistTitle"
        android:adjustViewBounds="true"
        android:background="@drawable/playlist_cover_frame"/>

    <TextView
        android:id="@+id/createButton"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/create_playlist_button"
        android:text="@string/create"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        style="@style/CreatePlaylistButton"/>

    <EditText
        android:id="@+id/playlistTitle"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@id/playlistCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/playlistDescription"
        android:background="@drawable/create_playlist_field_frame"
        android:hint="@string/title"
        android:paddingStart="16dp"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="16sp"
        style="@style/NewPlaylistField"/>
    <TextView
        android:id="@+id/playlistTitleTopHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/playlistTitle"
        app:layout_constraintTop_toTopOf="@id/playlistTitle"
        app:layout_constraintBottom_toTopOf="@id/playlistTitle"
        android:layout_marginStart="16dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/title"
        android:textColor="@color/blue"
        style="@style/NewPlaylistHint"/>

    <EditText
        android:id="@+id/playlistDescription"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/playlistTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/create_playlist_field_frame"
        android:hint="@string/description"
        android:paddingStart="16dp"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="16sp"
        style="@style/NewPlaylistField"/>

    <TextView
        android:id="@+id/playlistDescriptionTopHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/playlistDescription"
        app:layout_constraintTop_toTopOf="@id/playlistDescription"
        app:layout_constraintBottom_toTopOf="@id/playlistDescription"
        android:layout_marginStart="16dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/description"
        android:textColor="@color/blue"
        style="@style/NewPlaylistHint"/>

</androidx.constraintlayout.widget.ConstraintLayout>