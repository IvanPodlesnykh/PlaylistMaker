<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/track_item_height"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/track_cover"
        android:layout_width="@dimen/track_cover_size"
        android:layout_height="@dimen/track_cover_size"
        android:layout_marginStart="@dimen/track_item_margin_left"
        android:layout_gravity="center_vertical" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/track_info_margin_between"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/song_name"
            android:layout_width="@dimen/track_name_width"
            android:layout_height="@dimen/track_name_height"
            style="@style/TrackName" />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="13dp">
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/ArtistName" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TrackItemDot" />
            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/TrackTime" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TrackItemArrow"
            android:layout_marginLeft="@dimen/track_info_margin_between"
            android:layout_marginRight="@dimen/track_info_margin_right"
            android:layout_gravity="right|center_vertical" />
    </FrameLayout>

</LinearLayout>