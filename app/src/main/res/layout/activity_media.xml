<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/back_button_size"
        android:layout_height="@dimen/back_button_size"
        android:scaleType="centerInside"
        android:src="@drawable/arrow_back_icon"
        android:foreground="?attr/selectableItemBackground"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/MediaBackButtonMargin"
        android:layout_marginStart="@dimen/MediaBackButtonMargin"
        android:layout_marginBottom="@dimen/MediaBackButtonMargin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/SettingsTopPanel"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        app:layout_constraintStart_toEndOf="@id/back_button"
        android:text="@string/media_library"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size"
        style="@style/SettingsTopPanel"
        android:paddingStart="12dp"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        style="@style/tabStyle"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabs"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>