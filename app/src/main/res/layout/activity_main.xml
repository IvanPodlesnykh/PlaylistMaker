<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/main_padding_horizontal"
    android:paddingBottom="@dimen/main_padding_bottom"
    style="@style/MainScreenBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlist maker"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size"
        android:paddingTop="10dp"
        android:paddingBottom="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"/>

    <Button
        android:id="@+id/search_button"
        android:text="@string/search_button"
        app:icon="@drawable/search_icon"
        style="@style/MainScreenButtons" />

    <Button
        android:id="@+id/media_button"
        android:text="@string/media_button"
        app:icon="@drawable/media_icon"
        style="@style/MainScreenButtons" />

    <Button
        android:id="@+id/settings_button"
        android:text="@string/settings"
        app:icon="@drawable/settings_icon"
        style="@style/MainScreenButtons" />
</LinearLayout>
