<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="MainScreenBackground">
        <item name="android:background">@color/yp_black</item>
    </style>
    <style name="SettingsText">
        <item name="android:layout_width">@dimen/settings_layout_width</item>
        <item name="android:layout_height">@dimen/settings_layout_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsImages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="SettingsBackground">
        <item name="android:background">@color/yp_black</item>
    </style>
    <style name="SettingsTopPanel">
        <item name="tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>