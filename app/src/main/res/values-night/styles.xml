<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="MainScreenBackground">
        <item name="android:background">@color/yp_black</item>
    </style>
    <style name="SettingsText">
        <item name="android:layout_width">@dimen/settings_layout_width</item>
        <item name="android:layout_height">@dimen/settings_layout_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">@color/white</item>
        <item name="android:paddingRight">@dimen/button_padding</item>
        <item name="android:layout_gravity">center_vertical|right</item>
    </style>
    <style name="SettingsAndSearchBackground">
        <item name="android:background">@color/yp_black</item>
    </style>
    <style name="SettingsTopPanel">
        <item name="tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SearchBar">
        <item name="android:drawableTint">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="backgroundTint">@color/white</item>
    </style>
    <style name="SearchBarCloseButton">
        <item name="android:fillColor">@color/yp_black</item>
        <item name="android:src">@drawable/close_icon_night</item>
    </style>
    <style name="TrackName">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ArtistName">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/track_small_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TrackTime">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/track_small_text_size</item>
    </style>
    <style name="TrackItemDot">
        <item name="android:src">@drawable/dot_dark</item>
    </style>
    <style name="TrackItemArrow">
        <item name="android:src">@drawable/forward_arrow_dark</item>
    </style>

    <style name="ErrorViewBackground">
        <item name="android:src">@drawable/dark_note_background</item>
    </style>
    <style name="ErrorViewForeground">
        <item name="android:src">@drawable/dark_note_foreground</item>
    </style>
    <style name="ErrorMessage">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ReloadButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="searchHistoryTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    <style name="ClearHistoryButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

<!--    Player activity-->

    <style name="PlayerTrackName">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PlayerArtistName">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="PlayerBackButton">
        <item name="android:tint">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="PlayerPlayButton">
        <item name="android:src">@drawable/player_play_button_night</item>
    </style>

    <style name="PlayerPauseButton">
        <item name="android:src">@drawable/player_pause_button_night</item>
    </style>

    <style name="PlayerAddToPlaylistButton">
        <item name="android:src">@drawable/player_add_track_to_playlist_button_night</item>
    </style>

    <style name="PlayerLikeButton">
        <item name="android:src">@drawable/player_like_button_night</item>
    </style>
    
    <style name="CurrentPlaytime">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!--    Track info-->
    <style name="TrackInfo">
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--    Media library-->
    <style name="NothingFoundIcon">
        <item name="android:src">@drawable/nothing_found_night</item>
    </style>

    <style name="NothingFoundText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NewPlaylistButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="tabStyle">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabTextAppearance">@style/tabText</item>
        <item name="tabBackground">@drawable/selector_background_night</item>
    </style>
    <style name="tabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavigationMenu">
        <item name="itemTextColor">@color/bottom_nav_color_night</item>
        <item name="backgroundTint">@color/yp_black</item>
        <item name="itemIconTint">@color/bottom_nav_color_night</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ThemeSwitch">
        <item name="trackTint">@color/dark_blue</item>
        <item name="thumbTint">@color/blue</item>
    </style>

    <style name="NewPlaylistTopPanel">
        <item name="tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CreatePlaylistButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NewPlaylistBackground">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="NewPlaylistField">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="NewPlaylistHint">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="PlaylistCard">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/yp_black</item>
    </style>

<!--    Player activity bottom sheet-->

    <style name="BottomSheet">
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>

    <style name="TopView">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BottomSheetTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="BottomSheetPlaylistName">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BottomSheetPlaylistNumberOfTracks">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/track_small_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>